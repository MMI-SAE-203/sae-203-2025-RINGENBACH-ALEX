---
export interface Props {
    variant?: "default" | "dark" | "outlined";
    size?: "small" | "medium" | "large";
    url?: string;
    text?: string;
}

const {
    variant = "default",
    size = "medium",
    url = "#",
    text = "",
} = Astro.props;

const variantClass = {
    default: "border-green-100 bg-green-50",
    dark: "border border-green-500 bg-green-500 text-white",
    outlined: "border-green-200 bg-red",
};

const sizeClass = {
    small: "px-4 py-2.5 text-sm",
    medium: "px-6 py-3 text-base",
    large: "px-8 py-4 text-base",
};
---

<a
    href={url}
    class={`inline-flex items-center gap-2 text-green-300 border-2 font-bold rounded-lg transition duration-300 ease-in-out ${variantClass[variant]} ${sizeClass[size]}`}
>
    <slot />
    {text}
</a>
