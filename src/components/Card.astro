---
const { titre, date, affiche, collectionId, recordId } = Astro.props;
const baseUrl = "https://sae-203.alex-ringenbach.fr";
const afficheUrl = `${baseUrl}/api/files/${collectionId}/${recordId}/${affiche}`;
const filmUrl = `/film/${recordId}`;
console.log("Affiche URL:", afficheUrl);
---

<a
    href={filmUrl}
    class="block bg-white shadow-lg rounded-lg overflow-hidden transform transition duration-300 hover:scale-105"
>
    <img src={afficheUrl} alt={titre} class="w-full h-48 object-cover" />
    <div class="p-4">
        <h3 class="text-2xl font-bold text-green-600">{titre}</h3>
        <p class="mt-2 text-gray-700">Diffusion : {date}</p>
    </div>
</a>
